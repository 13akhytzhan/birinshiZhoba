<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:gravity="right"
        android:paddingRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC"
            style="@style/button_functions"
            android:text="C"/>
        <Button
            android:id="@+id/btnDel"
            style="@style/button_functions"
            android:text="del"/>
        <Button
            android:id="@+id/btnPer"
            style="@style/button_functions"
            android:text="%"/>
        <Button
            android:id="@+id/btnDiv"
            style="@style/button_functions"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/btn7"
            style="@style/button_numbers"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            style="@style/button_numbers"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            style="@style/button_numbers"
            android:text="9"/>
        <Button
            android:id="@+id/btnMult"
            style="@style/button_functions"
            android:text="x"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/button_numbers"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            style="@style/button_numbers"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            style="@style/button_numbers"
            android:text="6"/>
        <Button
            android:id="@+id/btnPlus"
            style="@style/button_functions"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/button_numbers"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            style="@style/button_numbers"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            style="@style/button_numbers"
            android:text="3"/>
        <Button
            android:id="@+id/btnMin"
            style="@style/button_functions"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDot"
            style="@style/button_functions"
            android:text="."/>
        <Button
            android:id="@+id/btn0"
            style="@style/button_numbers"
            android:text="0"/>
        <Button
            android:id="@+id/btnPlusMin"
            style="@style/button_functions"
            android:text="+/-"/>
        <Button
            android:id="@+id/btnEqual"
            style="@style/button_functions"
            android:text="="/>
    </LinearLayout>
</LinearLayout>